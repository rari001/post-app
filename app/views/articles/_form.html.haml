%ul
  - article.errors.full_messages.each do |msg|
    %li= msg
= form_with(model: article, local: true, data: { turbo: false }) do |f|
  %div
    = f.label :eyecatch, 'アイキャッチ'
  %div
    = f.file_field :eyecatch
  .form-text
    = f.label :title, 'タイトル'
  %div
    = f.text_field :title, placeholder: 'タイトル', class: 'text'
  .form-text
    内容
  %div
    = f.rich_text_area :content
  %div
    = f.submit '保存', class: 'btn-primary btn-top'
